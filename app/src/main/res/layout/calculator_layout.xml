<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/calculatorInputBackground"
        android:minHeight="@dimen/calc_field_min_height"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:id="@+id/degRadTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="start|top"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_gravity="start|bottom"
                android:textSize="18sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/io_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/calc_field_vertical_padding"
            android:paddingBottom="@dimen/calc_field_vertical_padding">

            <HorizontalScrollView
                android:id="@+id/input_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:longClickable="true"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:scrollbars="none">

                <ru.art2000.extensions.CalculatorEditText
                    android:id="@+id/tv_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:overScrollMode="always"
                    android:scrollHorizontally="true"
                    android:hint="@string/calculator_input_hint"
                    android:textSize="@dimen/calc_text_size" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:gravity="end|bottom"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/calc_text_size"
                    android:visibility="invisible"
                    />
            </HorizontalScrollView>
        </LinearLayout>
    </FrameLayout>

    <include
        android:id="@+id/calculator_panel"
        layout="@layout/main_calculator_panel" />

</LinearLayout>