<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light">
        <item name="background">@color/LightTheme_colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/LightTheme_colorPrimary</item>
        <item name="colorAccent">@color/LightTheme_colorAccent</item>
        <item name="calc_input_bg">@color/LightTheme_inputBackground</item>
        <item name="btn_text_color">@color/LightTheme_buttonTextColor</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:preferenceStyle">@style/PreferenceTheme</item>
        <item name="actionBarStyle">@style/ActionStyle</item>
        <item name="actionBarTheme">@style/ActionTheme</item>
    </style>
    <style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">

    </style>
    <style name="StartTheme" parent="Theme.AppCompat.Light"/>
    <style name="PrefCategory">
        <item name="android:layout">@layout/category</item>
    </style>
    <style name="ActionTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textColorPrimary">?colorAccent</item>
    </style>
    <style name="ActionStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textColorPrimary">?colorAccent</item>
    </style>
    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@color/LightTheme_colorPrimaryDark</item>
    </style>
    <style name="Base.AppTheme.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/DarkTheme_colorPrimary</item>
        <item name="android:windowBackground">@color/DarkTheme_colorPrimary</item>
        <item name="colorPrimary">@color/DarkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/DarkTheme_colorAccent</item>
        <item name="calc_input_bg">@color/DarkTheme_inputBackground</item>
        <item name="btn_text_color">@color/DarkTheme_buttonTextColor</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:preferenceStyle">@style/PreferenceTheme</item>
        <item name="actionBarStyle">@style/ActionStyle</item>
    </style>
    <style name="PreferenceCategoryTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark" />
    <style name="AppTheme.DayNight" parent="AppTheme" />
    <style name="AppTheme.System" parent="AppTheme" />
    <style name="AppTheme.Battery" parent="AppTheme" />
    <style name="Base.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center|center</item>
        <item name="android:layout_gravity">center|center</item>
        <item name="android:textColor">?btn_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonStyle" parent="Base.ButtonStyle">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>
</resources>
