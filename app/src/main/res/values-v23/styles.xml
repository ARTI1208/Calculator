<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RT.AppTheme.Dark" parent="Base.RT.AppTheme.Dark">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="RT.AppTheme.Light" parent="Base.RT.AppTheme.Light">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RT.Widget.ListView.TopIndicator" parent="@style/Widget.AppCompat.ListView">
        <item name="android:scrollIndicators">top</item>
    </style>

    <style name="RT.Widget.ListView.VerticalIndicators" parent="@style/Widget.AppCompat.ListView">
        <item name="android:scrollIndicators">bottom|top</item>
    </style>

    <style name="RT.Widget.ScrollView.TopIndicator" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollIndicators">top</item>
    </style>

</resources>